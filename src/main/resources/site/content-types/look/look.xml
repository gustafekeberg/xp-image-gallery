<?xml version="1.0" encoding="UTF-8"?>
<content-type>
	<display-name>Gallery look</display-name>
	<super-type>base:structured</super-type>
	<is-abstract>false</is-abstract>
	<is-final>true</is-final>
	<allow-child-content>true</allow-child-content>
	<form>
		<field-set name="thumbnailSettings">
			<label>Thumbnail settings</label>
			<help-text></help-text>
			<items>
				<option-set name="columnStyle">
					<label>Column style</label>
					<expanded>false</expanded>
					<occurrences minimum="1" maximum="1"/>
					<options minimum="0" maximum="4">
						<option name="xs">
							<label>Extra small screen</label>
							<items>
								<inline mixin="col-style"/>
							</items>
						</option>
						<option name="sm">
							<label>Small screen</label>
							<items>
								<inline mixin="col-style"/>
							</items>
						</option>
						<option name="md">
							<label>Medium screen</label>
							<items>
								<inline mixin="col-style"/>
							</items>
						</option>
						<option name="lg">
							<label>Large screen</label>
							<items>
								<inline mixin="col-style"/>
							</items>
						</option>
					</options>
				</option-set>
				<item-set name="thumbStyle">
					<label>Shape</label>
					<help-text></help-text>
					<occurrences minimum="1" maximum="1"/>
					<items>
						<inline mixin="image-shape"/>
						<input name="shape" type="RadioButton">
							<label>Shape</label>
							<help-text></help-text>
							<occurrences minimum="0" maximum="0"/>
							<config>
								<option value="img-original">Original</option>
								<option value="img-circle">Circle</option>
								<option value="img-rounded">Rounded</option>
								<option value="img-thumbnail">Thumbnail</option>
							</config>
							<default>img-original</default>
						</input>
						<input name="caption" type="CheckBox">
							<label>Display figcaption below thumbnail</label>
							<help-text></help-text>
							<occurrences minimum="0" maximum="1"/>
							<default>checked</default>
						</input>
					</items>
				</item-set>

			</items>
		</field-set>
		<field-set name="displaySettings">
			<label>Display settings</label>
			<help-text></help-text>
			<items>
				<item-set name="dispStyle">
					<label>Shape</label>
					<help-text></help-text>
					<occurrences minimum="1" maximum="1"/>
					<items>
						<inline mixin="image-shape"/>
						<input name="animations" type="CheckBox">
							<label>Animations</label>
							<help-text></help-text>	
							<occurrences minimum="0" maximum="1"/>
							<default>checked</default>
						</input>
					</items>
				</item-set>

			</items>
		</field-set>
	</form>
</content-type>
