<?xml version="1.0" encoding="UTF-8"?>
<mixin>
	<display-name>Thumbnail settings</display-name>
	<items>
		<option-set name="thumbnails">
			<label>Thumbnail settings</label>
			<expanded>false</expanded>
			<occurrences minimum="0" maximum="1"/>
			<help-text>Settings for the thumbnails.</help-text>
			<options minimum="0" maximum="100">
				<option name="shape">
					<label>Crop</label>
					<default>true</default>
					<items>
						<inline mixin="thumbnail-shape"/>
					</items>
				</option>
				<option name="style">
					<label>Style</label>
					<default>true</default>
					<items>
						<inline mixin="thumbnail-style"/>
					</items>
				</option>
				<option name="click">
					<label>Click action</label>
					<default>true</default>
					<help-text>Open image or viewer when image is clicked.</help-text>
					<items>
						<inline mixin="thumbnail-target"/>
					</items>
				</option>
				<option name="size">
					<label>Size</label>
					<default>true</default>
					<items>
						<inline mixin="thumbnail-size"/>
					</items>
				</option>
				<option name="captions">
					<label>Captions</label>
					<default>true</default>
					<items>
						<inline mixin="thumbnail-captions"/>
					</items>
				</option>
			</options>
		</option-set>
	</items>
</mixin>
